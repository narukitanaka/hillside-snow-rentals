<section class="topics">
  <div class="page-width">
    <div class="flex">
      <div class="left">
        <h3>TOPICS</h3>
        <p class="btn-wrap">
          <a class="btn" href="/blogs/news">view all</a>
        </p>
      </div>
      <div class="right">
        {%- for article in blogs['news'].articles limit: 5 -%}
          <dl>
            <a href="{{ article.url }}">
              <dt>{{ article.published_at | date: "%Y.%m.%d" }}</dt>
              <dd>{{ article.title }}</dd>
              <img class="arrow" src="https://cdn.shopify.com/s/files/1/0703/7534/2261/files/arrow-right.png" alt="">
            </a>
          </dl>
        {%- endfor -%}
      </div>
    </div>
  </div>

  <style>
    .topics {
      padding: 120px 0;
      overflow: hidden;
      position: relative;
      width: 100%;
      background-color: #f5f5f5;
    }
    .topics .flex {
      display: flex;
      align-items: flex-start;
    }
    .topics .left {
      width: 280px;
    }
    .topics .right {
      width: calc(100% - 280px);
    }
    .topics .btn-wrap {
      margin-top: 60px;
    }
    .topics dl {
      border-bottom: 1px solid #000;
      margin: 0;
    }
    .topics dl a {
      position: relative;
      display: flex;
      align-items: center;
      padding: 20px 0;
      transition: all 0.3s;
    }
    .topics dl a:hover {
      padding-left: 20px;
    }
    .topics dl a .arrow {
      width: 25px;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      right: 10px;
      transition: all 0.3s;
    }
    .topics dl a:hover .arrow {
      scale: 1.2;
    }
    .topics dl:first-of-type a {
      padding-top: 0;
    }
    .topics dl a dt {
      width: 15%;
      flex-shrink: 0;
    }
    .topics dl a dd {
      width: 70%;
      flex-grow: 1;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin: 0;
      padding-right: 70px;
    }
    @media only screen and (max-width: 589px) {
      .topics {
        padding: 80px 0 100px;
      }
      .topics .flex {
        flex-direction: column;
      }
      .topics .left {
        width: 100%;
        display: flex;
        justify-content: space-between;
        margin-bottom: 40px;
      }
      .topics .btn-wrap {
        margin-top: 0;
      }
      .topics .right {
        width: 100%;
      }
      .topics dl a dt {
        width: 30%;
        font-size: 14px;
      }
      .topics dl a dd {
        font-size: 15px;
      }
      .topics dl a .arrow {
        width: 20px;
        top: 15%;
        transform: translateY(-15%);
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Top Topics",
  "settings": [],
  "presets": [
    {
      "name": "Top Topics",
    }
  ]
}
{% endschema %}